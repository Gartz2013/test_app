<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @idea.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @idea.description %>
</p>

<p>
  <strong>Audio:</strong><br />
  <% if @idea.bucket_url.present? %>
    <audio controls>
      <source src="<%= @idea.bucket_url %>" type="audio/mpeg">
    </audio>
  <% end %>
</p>

<%= link_to 'Edit', edit_idea_path(@idea) %> |
<%= link_to 'Back', ideas_path %>
